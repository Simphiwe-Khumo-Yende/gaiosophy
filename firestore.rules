rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() { return request.auth != null; }
    function isOwner(userId) { return request.auth.uid == userId; }

    // Main content collection - allow read access for signed-in users
    match /content/{id} {
      allow read, list: if isSignedIn();
      allow create, update, delete: if isSignedIn() && request.auth.token.admin == true;
    }

    // Content collections for different types - allow read access for signed-in users
    match /content_seasonal_wisdom/{id} {
      allow read, list: if isSignedIn();
      allow create, update, delete: if isSignedIn() && request.auth.token.admin == true;
    }

    match /content_plant_allies/{id} {
      allow read, list: if isSignedIn();
      allow create, update, delete: if isSignedIn() && request.auth.token.admin == true;
    }

    match /content_recipes/{id} {
      allow read, list: if isSignedIn();
      allow create, update, delete: if isSignedIn() && request.auth.token.admin == true;
    }

    // User profiles - users can read and write their own profile
    match /users/{userId} {
      allow read, write: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && request.auth.uid == userId;
    }

    match /media_assets/{document=**} {
      allow read: if true;  // Public read access
      allow write: if isSignedIn() && request.auth.token.admin == true;
    }

    match /app_config/{doc} {
      allow read: if true;
    }

    // Public configuration and seasons data
    match /config/{doc} { allow read: if true; }
    match /seasons/{doc} { allow read: if true; }
  }
}
